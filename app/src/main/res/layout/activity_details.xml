        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="549dp"
        android:layout_height="265dp"
        android:layout_marginTop="16dp"
        android:background="?attr/panelBackground"
        android:text="تطبيق &quot;تعليم الأحرف للأطفال&quot; هو تطبيق تعليمي مصمم خصيصاً لمساعدة الاطفال في تعلم الاحرف الهجائية والانجليزية بطريقة ممتعة وتفاعلية. يتضمن مجموعة من الانشطة التعليمية والفيديوهات التي تسعاد الأطفال على التعرف على الاحرف وتعلم كيفية نطقها بشكل صحيح. بالاضافة الئ ذالك يمكن للتطبيق أن يتضمن ميزات اضافية مثل الفيديوهات التعليمية , وأصوات مسلية, ورسوم جذابة لتعزيز عملية التعلم وجعلها أكثر متعة للأطفال."
