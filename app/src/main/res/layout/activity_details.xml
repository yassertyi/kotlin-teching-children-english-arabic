        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/x_48px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="584dp"
        android:layout_height="93dp"
